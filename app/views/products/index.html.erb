<p><%= link_to "Add New Product", new_product_path %></p>

<div class="container main-wrapper">
  <h3>Newest Items</h3>
  <div class="row">
    <div class="col-md-4">
      Product Name
    </div>
  </div>
  <% @products.id_sort.each do |product| %>
    <div class="row">
        <div class="col-md-4">
          <%= link_to product.name, product_path(product)%>
        </div>
    </div>
  <% end %>

<h3>Products Made in the USA</h3>
  <div class="row">
    <div class="col-md-4">
      Product Name
    </div>
  </div>
  <% @products.usa_only.each do |product| %>
    <div class="row">
        <div class="col-md-4">
          <%= link_to product.name, product_path(product)%>
        </div>
    </div>
  <% end %>

<h3>Best Reviewed Item
</h3>
  <div class="row">
    <div class="col-md-4">
      Product Name
    </div>
  </div>
  <% @products.most_reviews.each do |product| %>
  <div class="row">
      <div class="col-md-4">
        <%= link_to product.name, product_path(product)%>
      </div>
  </div>
  <% end %>

<h1>Our Products</h1>
<ul>
  <% @products.each do |product| %>
    <li> <%= link_to product.name, product_path(product) %> </li>
  <% end %>
</ul>
